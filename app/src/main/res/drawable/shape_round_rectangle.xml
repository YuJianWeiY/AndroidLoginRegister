<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#ffffff"/>
    <!--指定形状内部的填充颜色-->
    <stroke
        android:width="1dp"
        android:color="#aaaaaa"/>
    <!--指定形状轮廓的粗细与颜色-->
    <corners android:radius="5dp"/>
    <!--指定形状四个圆角的半径-->
    <padding
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"/>
    <!--指定形状四个方向间距-->
</shape>